<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    tools:context="com.android.davidlin.rentbike.view.NewOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_order_bikename_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="brand and type"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_order_owner_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/new_order_bikename_tv"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="owner name"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/new_order_attrs_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/new_order_owner_tv"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="attributes"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/new_order_date_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/new_order_attrs_tv"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <CalendarView
                    android:id="@+id/new_order_startdatae_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CalendarView
                    android:id="@+id/new_order_enddate_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/new_order_attrs_tv"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="开始日期"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="结束日期"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/new_order_confirm_bt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/new_order_date_layout"
                android:background="@color/colorPrimary"
                android:text="提交订单"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
