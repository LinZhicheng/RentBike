<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    tools:context="com.android.davidlin.rentbike.view.NewOrderActivity">

    <TextView
        android:id="@+id/new_order_bikename_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="brand and type"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/new_order_owner_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/new_order_bikename_tv"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="owner name"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/new_order_attrs_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/new_order_owner_tv"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="attributes"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/new_order_days_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/new_order_attrs_tv"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="30dp"
            android:paddingStart="10dp"
            android:text="天数"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/new_order_days_minus_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/new_order_days_tv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/new_order_days_add_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

    </LinearLayout>
</RelativeLayout>
