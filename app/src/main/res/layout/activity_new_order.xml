<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    tools:context="com.android.davidlin.rentbike.view.NewOrderActivity">

    <TextView
        android:id="@+id/new_order_bikename_tv"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="brand and type"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/new_order_owner_tv"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/new_order_bikename_tv"
        android:layout_marginTop="1dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="owner name"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:textSize="20sp" />


</RelativeLayout>
