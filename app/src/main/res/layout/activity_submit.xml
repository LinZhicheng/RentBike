<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    tools:context="com.android.davidlin.rentbike.view.SubmitActivity">

    <EditText
        android:id="@+id/submit_username"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="15dip"
        android:background="@android:color/white"
        android:hint="请输入用户名"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/submit_password"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/submit_username"
        android:layout_marginTop="1dip"
        android:background="@android:color/white"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:singleLine="true" />

    <EditText
        android:id="@+id/submit_password_again"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/submit_password"
        android:layout_marginTop="1dip"
        android:background="@android:color/white"
        android:hint="请再一次输入密码"
        android:inputType="textPassword"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:singleLine="true" />

    <Button
        android:id="@+id/submit_confirm"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@id/submit_password_again"
        android:layout_marginTop="25dip"
        android:background="@color/colorPrimary"
        android:text="注    册"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>
