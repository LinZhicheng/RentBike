<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bike_list_item_imageview"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/list_item_thumbnail" />

    <TextView
        android:id="@+id/bike_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dip"
        android:layout_marginTop="5dip"
        android:layout_toEndOf="@id/bike_list_item_imageview"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bike_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dip"
        android:layout_marginTop="40dip"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bike_list_item_attrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bike_list_item_title"
        android:layout_marginStart="5dip"
        android:layout_marginTop="5dip"
        android:layout_toEndOf="@id/bike_list_item_imageview"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bike_list_item_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bike_list_item_attrs"
        android:layout_marginStart="5dip"
        android:layout_toEndOf="@id/bike_list_item_imageview"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bike_list_item_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bike_list_item_age"
        android:layout_marginStart="5dip"
        android:layout_toEndOf="@id/bike_list_item_imageview"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="13sp" />

</RelativeLayout>